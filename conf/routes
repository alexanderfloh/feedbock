# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# URL to trigger import from the CI System (Jenkins)
GET     /import controllers.Application.importFromCISystem

# Home page
GET     / controllers.Application.index
GET     /details/:suite/:clazz/:test controllers.Application.viewDetails(suite: String, clazz: String, test: String)

GET     /loadBuild/:buildNumber controllers.Application.loadBuild(buildNumber: Int)
GET     /calc controllers.Application.calc

POST    /submitFeedback/:suite/:className/:test controllers.Application.submitFeedback(suite: String, className: String, test: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file controllers.Assets.at(path="/public", file)
